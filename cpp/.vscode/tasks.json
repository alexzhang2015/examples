{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build with make",
            "command": "make",
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build C++ examples"
        }
    ]
}
